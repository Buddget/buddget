@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex justify-content-center align-items-center min-vh-70">
    <div class="main-welcome-card p-5 shadow-lg">
        <div class="text-center mb-4">
            <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png" alt="Welcome" width="80" class="mb-3" />
            <h1 class="display-5 fw-bold mb-2" style="color:#17632d;">Welcome to Buddget!</h1>
            <p class="lead mb-4">Your smart way to manage finances, spaces, and goals.<br>Start organizing your financial life today.</p>
            <a href="/User/FinancialSpace/MySpaces" class="btn custom-btn px-4 py-2">Get Started</a>
        </div>
        <div class="row text-center feature-row">
            <div class="col-md-4 mb-3">
                <div class="feature-icon mb-2"><i class="bi bi-wallet2" style="font-size:2rem;color:#17632d;"></i></div>
                <h5 class="fw-semibold">Financial Spaces</h5>
                <p class="text-muted small">Create, manage, and collaborate on shared budgets and goals.</p>
            </div>
            <div class="col-md-4 mb-3">
                <div class="feature-icon mb-2"><i class="bi bi-people" style="font-size:2rem;color:#17632d;"></i></div>
                <h5 class="fw-semibold">Teamwork</h5>
                <p class="text-muted small">Invite friends, family, or colleagues to manage finances together.</p>
            </div>
            <div class="col-md-4 mb-3">
                <div class="feature-icon mb-2"><i class="bi bi-bar-chart-line" style="font-size:2rem;color:#17632d;"></i></div>
                <h5 class="fw-semibold">Insights</h5>
                <p class="text-muted small">Track your progress and get insights with beautiful charts and reports.</p>
            </div>
        </div>
    </div>
</div>

<style>
    .min-vh-70 {
        min-height: 70vh;
    }
    .main-welcome-card {
        background: #fff;
        border-radius: 18px;
        max-width: 700px;
        margin: 40px auto;
        box-shadow: 0 4px 24px rgba(23, 99, 45, 0.08), 0 1.5px 4px rgba(0,0,0,0.04);
    }
    .feature-row .feature-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 48px;
        width: 48px;
        margin: 0 auto 8px auto;
        background: #eaf7ef;
        border-radius: 50%;
    }
    .custom-btn {
        background-color: #17632d;
        color: white;
        border: none;
        transition: background 0.3s ease, transform 0.2s ease;
        border-radius: 0.3125rem;
        font-weight: bold;
        font-size: 1.1rem;
    }
    .custom-btn:hover {
        background-color: #145214;
        color: white;
        transform: scale(1.05);
    }
</style>
