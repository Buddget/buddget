@page
@model ForgotPasswordModel
@{
    Layout = null;
    ViewData["Title"] = "Forgot your password?";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/auth-custom.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body class="auth-bg">
    <div class="auth-card">
        <h1>Forgot Password</h1>
        <p>Enter your email to reset your password</p>
        <form method="post">
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="validation-message"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Reset Password</button>
            <div class="d-flex justify-content-between mt-2">
                <a asp-page="./Login" class="auth-link">Back to login</a>
                <a asp-page="./Register" class="auth-link">Register</a>
            </div>
        </form>
    </div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
