@page
@model RegisterModel
@{
    Layout = null;
    ViewData["Title"] = "Register";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/auth-custom.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body class="auth-bg">
    <div class="auth-card">
        <h1>Register</h1>
        <p>Register a new Buddget account</p>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="validation-message"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.FirstName" class="form-control" placeholder="Name" />
                <label asp-for="Input.FirstName">Name</label>
                <span asp-validation-for="Input.FirstName" class="validation-message"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.LastName" class="form-control" placeholder="Surname" />
                <label asp-for="Input.LastName">Surname</label>
                <span asp-validation-for="Input.LastName" class="validation-message"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="validation-message"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Repeat password" />
                <label asp-for="Input.ConfirmPassword">Repeat password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="validation-message"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Register</button>
            <div class="text-center mt-2">
                Already have an account? <a asp-page="./Login" class="auth-link">Login</a>
            </div>
        </form>
    </div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
