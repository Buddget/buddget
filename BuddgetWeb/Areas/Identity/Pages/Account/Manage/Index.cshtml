@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="d-flex justify-content-center align-items-center min-vh-70">
    <div class="profile-card p-5 shadow-lg">
        <h3 class="text-center mb-4" style="color:#17632d;"><i class="bi bi-person-circle me-2"></i>@ViewData["Title"]</h3>
        <partial name="_StatusMessage" for="StatusMessage" />
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="FirstName" class="form-control" placeholder="Please choose your first name." />
                <label asp-for="FirstName" class="form-label"></label>
            </div>
            <div class="form-floating mb-4">
                <input asp-for="LastName" class="form-control" placeholder="Please choose your last name." />
                <label asp-for="LastName" class="form-label"></label>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn custom-btn">Save</button>
        </form>
    </div>
</div>

<style>
    .min-vh-70 {
        min-height: 70vh;
    }
    .profile-card {
        background: #fff;
        border-radius: 18px;
        max-width: 480px;
        margin: 40px auto;
        box-shadow: 0 4px 24px rgba(23, 99, 45, 0.08), 0 1.5px 4px rgba(0,0,0,0.04);
    }
    .custom-btn {
        background-color: #17632d;
        color: white;
        border: none;
        transition: background 0.3s ease, transform 0.2s ease;
        border-radius: 0.3125rem;
        font-weight: bold;
        font-size: 1.1rem;
        padding: 0.75rem 0;
    }
    .custom-btn:hover {
        background-color: #145214;
        color: white;
        transform: scale(1.05);
    }
    .profile-card .form-control:focus {
        border-color: #17632d;
        box-shadow: 0 0 0 0.2rem rgba(23, 99, 45, 0.15);
    }
    .profile-card h3 i {
        color: #17632d;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
